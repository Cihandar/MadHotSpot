
@model MadHotSpot.Models.Kullanicilar;
@{

    var action = Model == null || Model.Id == Guid.Empty ? "create" : "update";
    //var areaTypeList = typeof(type).EnumToList().Select(x => new { Value = x.Value, Text = x.Description }).OrderBy(x => x.Text).ToList();
}
<div class="modal fade OtelApp-forms-modal" id="crud-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form class="OtelApp-forms" id="OtelApp-forms" asp-controller="Kullanicilar" asp-action="@action" enctype="multipart/form-data" data-ajax-begin="OtelAppOnBegin" data-ajax-complete="OtelAppOnComplete('crud-modal')" data-ajax-failure="OtelAppOnFailure" data-ajax-success="OtelAppOnSuccess(data, datatableUpdate)" data-ajax="true" data-ajax-method="POST" data-ajax-url="/Kullanicilar/@action">
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Market Tanımları</h5>
                    <button type="button" class="close OtelApp-forms-modal-close" data-dismiss="modal" aria-label="Vazgeç"></button>
                </div>
                <div class="modal-body">
                    <div class="hidden">
                        <input type="hidden" class="form-control" asp-for="Id">
                    </div>
                    
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label asp-for="KullaniciKodu" class="form-control-label">Kullanıcı Adı</label>
                                <input asp-for="KullaniciKodu" class="form-control" placeholder="" />
                                <span asp-validation-for="KullaniciKodu" class="text-danger"> </span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label asp-for="Password" class="form-control-label">Şifre</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label asp-for="Email" class="form-control-label">E-mail</label>
                                <input asp-for="Email" type="text" class="form-control" placeholder="" />
                                <span asp-validation-for="Email" class="text-danger"> </span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label asp-for="Password" class="form-control-label">Yetki</label>
                                <select class="form-control" asp-for="Yetki">                            
                                    <option value="@PermissionEnum.Admin" >Tam</option>
                                    <option value="@PermissionEnum.Modarator" selected="@(Model == null || Model.Yetki == PermissionEnum.Modarator)">Sınırlı</option>
                                </select>
                            </div>
                        </div>
                    </div>
 
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary OtelApp-forms-modal-close" data-dismiss="modal">Vazgeç</button>
                    <button type="submit" id="kaydet" class="btn btn-success">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>
 
