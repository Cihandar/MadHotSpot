        <table class="table table-striped- table-bordered table-hover table-checkable" id="table">
            <thead>
                <tr>
                    <th>Kullanıcı Kodu</th>
                    <th></th>
                    <th>Telefon</th>
                    <th>Email</th>
                    <th>Yetki</th>
 
                    <th width="50">İşlemler</th>
