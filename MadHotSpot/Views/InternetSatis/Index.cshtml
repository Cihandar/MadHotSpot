@section Scripts
{
    <script>
        $(document).ready(function () {
            GetData();
        });

        var GetData = function () {
            $.ajax({
                url: "/InternetSatis/GetAll",
                type: "get",
                dataType: "json",
                complete: function () {
                
                },
                success: function (data) {
                    var dataTable = $('#table').DataTable({
                        destroy: true,
                        responsive: true,
                        dom: "<'row'<'col-sm-3 text-left'f><'col-sm-9 text-right'B>><'row'<'col-sm-12'tr>><'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7 dataTables_pager'lp>>",
                        lengthHappyHour: [[5, 10, 25, 50, -1], ["50 Kayıt", "100 Kayıt", "200 Kayıt", "250 Kayıt", "Hepsi"]],
                        pageLength: 50,
                        language: {
                            "emptyTable": "Kayıt bulunamadı",
                            "info": "_START_ - _END_ arası kayıtlar",
                            "infoEmpty": "Kayıt bulunamadı",
                            "infoFiltered": "(_MAX_ kayıt arasından filtrelendi)",
                            "lengthHappyHour": "_HappyHour_",
                            "search": "",
                            "searchPlaceholder": "Arama",
                            "zeroRecords": "Kayıt bulunamadı",
                            "lengthMenu": "Gösterilen _MENU_  Kayıt",
                        },
                       order: [[6, 'desc']],
                        buttons: [
                            {
                                text: 'Yeni Ekle',
                                className: 'btn-warning seridenApp-datatables-create',
                                attr: {
                                    "data-endpoint": "/InternetSatis/Create",
                                    title: "Yeni Ekle"
                                },
                                //action: function (e, dt, node, config) {
                                //    alert();
                                //    window.HappyHour.href="/Kullanici/Create";
                                //}
                            },
              
                            { extend: 'print', text: 'Listeyi Yazdır' },
                            //{ extend: 'copyHtml5', text: 'Kopyala' },
                            { extend: 'excelHtml5', text: 'Excel' },
                            { extend: 'csvHtml5', text: 'CSV' },
                            { extend: 'pdfHtml5', text: 'PDF' },
                           // { extend: 'colvis', text: 'Göster' }
                        ],
                        columns: [ 
                            { "data": null },
                            { "data": "sifre" },
                            { "data": "adSoyad" },
                            { "data": "odano" },
                            { "data": "tutar" },
                            { "data": "doviz" },
                            {

                                data: "baslamaTarihi",
                                render: function (data, type, row) {
                                    if (type === "sort" || type === "type") {
                                        return data;
                                    }
                                    return moment(data).format("DD.MM.YYYY HH:mm:ss");
                                }


                               
                            },
                            {

                                data: "bitisTarihi",
                                render: function (data, type, row) {
                                    if (type === "sort" || type === "type") {
                                        return data;
                                    }
                                    return moment(data).format("DD.MM.YYYY HH:mm:ss");
                                }



                            },
             
                   
                            {
                                data: null,
                                width: "210px",
                                className: "dt-center",
                                targets: -1,
                                orderable: false,
                                render: function (data, type, full, meta) {
                                    return '<button class="btn btn-success far fa-edit  font-weight-bold btn-pill mt-1 mr-2 seridenApp-datatables-update  min-w-90px" style="background:#31C241 !important" title="Düzenle" data-endpoint="InternetSatis/Update" data-id="' +
                                        full.id +
                                        '"></button>' 
                                    +
                                        '<button  class="btn btn-secondary fas fa-print font-weight-bold btn-pill mt-1 mr-2 seridenApp-datatables-delete  min-w-90px" title = "Print" style="background:#ffc107 !important"  data-endpoint="" data-id="' + full.id + '"> </button> ' +
                                        '<button  class="btn btn-secondary fas fa-undo-alt font-weight-bold btn-pill mt-1 mr-2 seridenApp-datatables-delete  min-w-90px" title = "İade" style="background:#FF4301 !important"  data-endpoint="" data-id="' + full.id + '"> İade</button> ';
                                }
                            }
                        ],
                        data: data
                    });

                    dataTable.on('order.dt search.dt', function () {
                        dataTable.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                            cell.innerHTML = i + 1;
                        });
                    }).draw();
                }
            });
        };


        function yenile() {
            GetData();
        }
    </script>
}

