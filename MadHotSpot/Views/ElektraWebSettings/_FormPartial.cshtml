@model MadHotSpot.Dtos.ElektraWebSettingsDto;
@{

    var action = Model == null || Model.Id == Guid.Empty ? "create" : "update";
    //var areaTypeList = typeof(type).EnumToList().Select(x => new { Value = x.Value, Text = x.Description }).OrderBy(x => x.Text).ToList();
}
<div class="modal fade OtelApp-forms-modal" id="crud-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form class="OtelApp-forms" id="OtelApp-forms" asp-controller="ElektraWebSettings" asp-action="@action" enctype="multipart/form-data" data-ajax-begin="OtelAppOnBegin" data-ajax-complete="OtelAppOnComplete('crud-modal',10,yenile)" data-ajax-failure="OtelAppOnFailure" data-ajax-success="OtelAppOnSuccess(data, yenile)" data-ajax="true" data-ajax-method="POST" data-ajax-url="/ElektraWebSettings/@action">
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-primary"><i class="far fa fa-people-carry"></i> Toplantı Kartı</h5>
                    <button type="button" class="close OtelApp-forms-modal-close" data-dismiss="modal" aria-label="Vazgeç"></button>
                </div>
                <div class="modal-body">    
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label asp-for="UserName" class="form-control-label">Kullanıcı Adı</label>
                                <input asp-for="UserName" class="form-control" placeholder="" />
                                <span asp-validation-for="UserName" class="text-danger"> </span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label asp-for="Password" class="form-control-label">Şifre</label>
                                <input asp-for="Password" class="form-control" placeholder="" />
                                <span asp-validation-for="Password" class="text-danger"> </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- text input -->
                            <div class="form-group">
                                <label asp-for="DepartmentId" class="form-control-label">Departman Id</label>
                                <input asp-for="DepartmentId" class="form-control" placeholder="" />
                                <span asp-validation-for="DepartmentId" class="text-danger"> </span>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary OtelApp-forms-modal-close" data-dismiss="modal">Vazgeç</button>
                    <button type="submit" id="kaydet" class="btn btn-success">Kaydet</button>
                </div>
            </div>
            <input type="hidden" asp-for="FirmaId" />
            <input type="hidden" asp-for="Id" />
        </form>
    </div>
</div>



